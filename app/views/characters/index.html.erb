<div class="lightbox my-5">
  <div class="row">
    <div class="col-lg-8 offset-2">
      <%= render 'characters/form', character: Character.new %>
      <div class="image-grid">
        <% @characters.each do |character| %>
          <%= link_to character_path(character) do %>
            <% if character.images.attached? %>
              <%= cl_image_tag character.images.last.key, class: "w-100 shadow-1-strong rounded" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
