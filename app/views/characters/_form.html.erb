<%= simple_form_for(character) do |f| %>
  <div class="form-inputs">
    <%= f.input :description, label: false, placeholder: 'Describe the appearance of your hero' %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Create your Hero", class: 'btn btn-primary w-100' %>
  </div>
<% end %>
